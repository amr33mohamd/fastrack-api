<script type="text/javascript">



 $(document).ready(function(){

var table = $('#datatable-buttons').DataTable();

   $(".paid-users").click(function(){
    table.search('نعم').draw();
   })
   $(".all-users").click(function(){
     table.search('').draw();
   })
   $(".normal-users").click(function(){
     table.search('لا').draw();
   })


   $(".pay").click(function(){
     var months = prompt('ما عدد الاشهر التى تريد اضافتها ؟');
     var user_id = $(this).attr('user');
     $.get('/pay-per-month',{
       user_id,
       months
     },function(data){
       window.location = '/users';
     })
   });



   $("#admin").click(function(){
     var user_id = $(this).attr('user');
     $.get('/make-admin',{
       user_id
     },function(data){
       window.location = '/users';
     })
   })



     $("#pay2").click(function(){
     var months = prompt('ما عدد الاشهر التى تريد حذفها ؟');
     var user_id = $(this).attr('user');
     $.get('/pay-per-month',{
       user_id,
       months: -months
     },function(data){
       window.location = '/users';
     })
   });

  })
  $(document).ready(function(){
    $(".edit").click(function(){
     var id = $(this).attr('id');
     var type = $(this).attr('type');
     var new_name = prompt('تريد تغيره الى ماذا ؟');
     var what = $(this).attr('what');
     if(type == "university"){
       if(new_name != null){
         $.get('/change-university',{
             id,
             new_name,
             what
           },function(data){
           })
       }
     }
     else if(type == "sector") {
       if(new_name != null){
         $.get('/edit-sector',{
             id,
             new_name,
             what
           },function(data){
           })

       }
     }
     else if(type == "subject") {
       if(new_name != null){
         $.get('/change-subject',{
             id,
             new_name,
             what
           },function(data){
           })

       }
     }
     else if (type == "note") {
       if(new_name != null){
         $.get('/change-book',{
             id,
             new_name,
             what
           },function(data){
           })
       }
     }

    })
  })

</script>
